<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal do app -->
    <style name="Theme.COillectRemake" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/verde_principal</item>
        <item name="colorPrimaryVariant">@color/verde_escuro</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray</item>

        <!-- Cores de status bar e background -->
        <item name="android:statusBarColor">@color/verde_principal</item>
        <item name="android:windowBackground">@drawable/bgdegrade</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Estilo de botão padrão -->
        <item name="buttonStyle">@style/ButtonStyle</item>

        <!-- Estilo de EditText padrão -->
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <!-- Estilo personalizado para botões -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Estilo para EditText -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Estilo para TextView -->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
